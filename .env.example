# Environment variables
APP_NAME=Skin Disease Classification API
APP_VERSION=1.0.0
DEBUG=True

# API Settings
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# Database Configuration
# Local Development (XAMPP)
DATABASE_URL=mysql+pymysql://root:@localhost:3306/dermatology_db

# Docker/Production
# DATABASE_URL=mysql+pymysql://dermatology_user:dermatology_pass@mysql:3306/dermatology_db

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Model
MODEL_PATH=resources/models/skin_disease_fusion_model_final.pth
IMG_SIZE=224

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# LLM Server Configuration (for RAG Chatbot)
LLM_SERVER_URL=http://localhost:8080/v1

# Vector Database
FAISS_INDEX_PATH=faiss_index_store
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Firebase
FIREBASE_SERVICE_ACCOUNT_KEY=firebase-service-account.json
FIREBASE_STORAGE_BUCKET=

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30  # Heartbeat ping interval in seconds
WS_CONNECTION_TIMEOUT=60  # Connection timeout in seconds
WS_MAX_CONNECTIONS_PER_USER=3  # Maximum concurrent connections per user
WS_RATE_LIMIT_MESSAGES_PER_MINUTE=20  # Rate limit: messages per minute per user
WS_RATE_LIMIT_BURST_SIZE=5  # Rate limit: burst allowance (extra tokens)